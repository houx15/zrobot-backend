# Application
APP_NAME=AI-Learning-Tablet
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_learning_tablet

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Alibaba Cloud OSS
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
OSS_BUCKET_NAME=your-bucket-name
OSS_ENDPOINT=oss-cn-shenzhen.aliyuncs.com
OSS_CDN_DOMAIN=cdn.your-domain.com
OSS_REGION_ID=cn-shenzhen
OSS_ROLE_ARN=acs:ram::your-account-id:role/your-upload-role

# Zhipu AI (for homework correction and problem solving)
ZHIPU_API_KEY=your-zhipu-api-key

# ByteDance/Volcano Engine - ASR (Speech Recognition)
VOLC_APP_ID=your-volc-app-id
VOLC_ACCESS_TOKEN=your-volc-access-token
VOLC_CLUSTER_ID=your-volc-cluster-id

# ByteDance/Volcano Engine - TTS (Speech Synthesis)
# Available voices: zh_female_tianmeixiaoyuan_moon_bigtts, etc.
VOLC_TTS_VOICE_TYPE=zh_female_tianmeixiaoyuan_moon_bigtts
VOLC_TTS_SAMPLE_RATE=24000

# Doubao LLM (Large Language Model)
DOUBAO_API_KEY=your-doubao-api-key
DOUBAO_MODEL_ID=ep-20250120163453-j7slq
DOUBAO_API_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
